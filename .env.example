APP_NAME="Student_admin_system"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://127.0.0.1:8000

# Configuración de idioma (cambiado a español)
APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_ES

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

# Configuración de logs
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Configuración de base de datos
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=student_admin_db
DB_USERNAME=root
DB_PASSWORD=

# Configuración de sesiones (cambiado a database para mejor rendimiento)
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Configuración de broadcasting y filesystem
BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local

# Configuración de colas (cambiado a database para emails)
QUEUE_CONNECTION=database

# Configuración de caché
CACHE_DRIVER=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

# Configuración de Redis
REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# ========================================
# CONFIGURACIÓN DE BREVO SMTP
# ========================================
# ⚠️ IMPORTANTE: Reemplaza estos valores con tus credenciales reales de Brevo

MAIL_MAILER=smtp
MAIL_HOST=smtp-relay.brevo.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls

MAIL_FROM_ADDRESS=
MAIL_FROM_NAME="Student_admin_system"

# Configuración adicional de Brevo
BREVO_API_KEY=
BREVO_SENDER_NAME="Student_admin_system"
BREVO_SENDER_EMAIL=

# ========================================
# CONFIGURACIÓN DE AWS (opcional)
# ========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Configuración de Vite
VITE_APP_NAME="${APP_NAME}"

# ========================================
# CONFIGURACIONES ADICIONALES PARA EL SISTEMA
# ========================================

# Configuración de timezone (opcional)
APP_TIMEZONE=America/Mexico_City

# Configuración de notificaciones
NOTIFICATION_QUEUE_ENABLED=true
LOW_STOCK_CHECK_ENABLED=true
WELCOME_EMAIL_ENABLED=true

# Configuración de límites
MAX_PRODUCTS_PER_PAGE=50
MAX_UPLOAD_SIZE=2048
